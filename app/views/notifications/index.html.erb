<div class="d-flex justify-content-center align-items-center mb-3 mt-2">
  <div class="chat-topbar text-center" style="background-color: #F4A460">
    <a href="#" onclick="event.preventDefault(); window.history.back();" style="color: white; color: black">
      <h3 class="back-button">
        <span class="back-symbol">&lt;</span>
        <span class="back-tooltip">戻る</span>
      </h3>
    </a>

    <h3 class="pt-2">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;通知</h3>
  </div>
</div>
<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
  <% if notifications.exists? %>
    <%= render notifications %>
      <div class="d-flex justify-content-center">
        <%= paginate notifications.all %>
      </div>
  <% else %>
  <p>通知はありません</p>
<% end %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="container mt-3">
        <div class="row">
          <%= render 'posts/sidebar' %>
          <div class="col-8">
            <div class="main-container">
              <h1 class="mb-3" style="font-size: 24px; font-weight: bold;">
                いいね一覧
              </h1>
              <div class="row">
                <% @liked_posts.each do |post| %>
                  <% unless post.user.is_deleted %>
                    <div class="col-12 mb-1">
                      <div class="post-container">
                        <div class="d-flex justify-content-between align-items-start">
                          <div class="post-tops d-flex justify-content-between">
                            <div>
                              <% if post.user.profile_picture.attached? %>
                                <%= image_tag url_for(post.user.profile_picture), class: 'profile-picture' %>
                              <% else %>
                                <%= image_tag "default_profile_picture.png", class: 'profile_picture' %>
                              <% end %>
                            </div>
                            <div class="ml-3">
                              <h6 class="post-header text-dark"><%= link_to post.user.username, user_path(post.user) %></h6>
                              <p class="post-content"><%= post.content %></p>
                              <%= image_tag post.image, class: "post-image", height: 200, width: 200 if post.image.attached? %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

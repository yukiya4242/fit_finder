<h1>ユーザー情報編集画面</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

<div class="field">
  <%= f.label :username %>
  <%= f.text_field :username, autofocus: true, autocomplete: "name" %>
</div>

<!--<div class="field">-->
<!--  <%= f.label :email %>-->
<!--  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>-->
<!--</div>-->


<div class="field">
  <%= f.label :introduction %>
  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
</div>

<div class="field">
  <%= f.label :profile_picture %><br>
  <%= f.file_field :profile_picture, accept: 'image/*' %>
</div>

<div class="field">
  <%= f.label :location %>
  <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
</div>


<div class="action">
  <%= f.submit "更新" %>
</div>
<% end %>
 <style>
    body {
      background-color: #f8f9fa;
      font-family: Helvetica, sans-serif;
    }
  </style>
<body>

<div class="container mt-5">
  <div class="row justify-content-center">
    <%= render 'posts/sidebar' %>
    <div class="col-md-8">
      <div class="user-info-container mb-5">
        <% if user_signed_in? %>
        <h1 class="text-center mb-4 user-info"><%= render 'posts/new_posts', post: @post %></h1>
        <% end %>
        <div class="d-flex justify-content-center user-info-row">
          <% if @user.profile_picture.attached? %>
            <%= image_tag url_for(@user.profile_picture), id: 'profile-picture-input', class: 'profile-picture' %>
          <% else %>
            <%= image_tag 'default_profile_picture', id: 'profile-picture-input', class: 'profile-picture' %>
          <% end %>
        </div>
        <div class="d-flex justify-content-center mt-2">
          <h3 class="user-info mr-2 mt-2"><%= @user.username %></h3>
          <% if current_user.present? && !current_user.guest? && current_user != @user && @user.present? %>
            <div class="d-flex align-items-center pb-2 ml-3" >
              <% if current_user.following.include?(@user) %>
                <span><%= button_to "unfollow", unfollow_user_path(@user), method: :delete, class: 'follow-btn small-btn' %></span>
              <% else %>
                <span><%= button_to "Follow", follow_user_path(@user), method: :post, class: 'follow-btn small-btn' %></span>
              <% end %>
            </div>
          <% end %>
        </div>

    <div class="text-center">
        <h3 class="user-info"><%#= @user.username %></h3>
          <div class="follow-info">
            <p class="user-info"><%= link_to "Follows: #{@user.following.count}", following_user_path(@user), class: 'text-dark'%></p>
            <p class="user-info"><%= link_to "Followers: #{@user.followers.count}", followers_user_path(@user), class: 'text-dark'%></p>
          </div>
        <%= render 'chats/info' %>

      <% if current_user == @user %>
        <%= link_to edit_user_path, class: 'user-info' do %>
          <i class="fas fa-user-edit fa-lg"></i>
        <% end %>
        <p class="user-info">メールアドレス: <%= @user.email %></p>
      <% end %>


      <p class="user-info">自己紹介: <%= @user.introduction %></p>
      <p class="user-info">お住まい: <%= @user.location %></p>
    </div>
  </div>

<div class="row">
  <% @posts.each do |post| %>
    <% unless post.user.is_deleted %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-1">
                <%= link_to user_path(post.user) do %>
                  <% if post.user.profile_picture.attached? %>
                    <%= image_tag url_for(post.user.profile_picture), class: 'img-fluid rounded-circle' %>
                  <% else %>
                    <%= image_tag 'default_profile_picture', class: 'img-fluid rounded-circle' %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-md-11">
                <h5 class="card-title">
                  <%= link_to user_path(post.user), class: 'text-decoration-none text-dark' do %>
                    <strong><%= post.user.username %></strong>
                  <% end %>
                  <small class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
                </h5>
                <p class="card-text"><%= post.content %></p>
                <%= render 'posts/image_video', post: post %>
              </div>
            </div>
          </div>
          <div class="card-footer text-muted">
            <%= render 'posts/likes', post: post %>
            <% if current_user == post.user %>
              <%= link_to edit_post_path(post.id), class: "btn btn-link" do %>
                <i class="fas fa-edit" style="color: #FFA07A;"></i>
              <% end %>
              <%= link_to post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？？", class: "btn btn-link" do %>
                <i class="fas fa-trash" style="color: #FFA07A;"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>




</div>
  </div>
</div>
<!-- jQuery and Bootstrap Bundle (includes Popper) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', (event) => {
  let guestActions = document.querySelectorAll('.guest-action');
  guestActions.forEach((element) => {
    element.addEventListener('click', (event) => {
      event.preventDefault();
      alert('ゲストユーザーはこの操作はできません');
    });
  });
});

</script>

</body>
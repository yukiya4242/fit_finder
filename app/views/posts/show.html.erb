<div class="container mt-5">
  <div class="row justify-content-center">
    <%= render 'sidebar' %>
    <div class="col-md-6 offset-md-1">
      <div class="card shadow-lg mb-5">
        <div class="card-header bg-dark text-white text-center">
          <h3 class="my-2"><i class="fas fa-info-circle"></i> 投稿詳細</h3>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5>
              <i class="far fa-calendar-alt"></i>
              <span class="text-muted">作成日時: <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
            </h5>
          </div>
          <div class="mb-4">
            <h5>
              <i class="fas fa-edit"></i>
              <span class="text-muted">更新日時: <%= @post.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
            </h5>
          </div>
          <div class="form-group">
            <h4 class="text-center">投稿文</h4>
            <p class="text-center lead"><%= @post.content %></p>
          </div>
          <% if @post.image.attached? %>
            <div class="form-group text-center">
              <h4 class="mb-3"></h4>
              <%= image_tag @post.image, size: "300x300", class: 'rounded img-thumbnail' %>
            </div>
          <% end %>
          <div class="form-group">
            <%= link_to '編集', edit_post_path(@post.id), class: 'btn btn-primary btn-block' %>
          </div>
          <div class="form-group">
            <%= link_to '削除', post_path(@post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

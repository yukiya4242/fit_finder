<h2>Sign up</h2>

<%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocas: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :profiel_picture %>
    <%= f.file_field :profile_picture, accept: '/images*' %>
  </div>

   <div class="field">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, autofocas: true, autocomplete: "introduction" %>
    </div>

    <div class="field">
      <%= f.label :location %>
      <%= f.text_area :location, autofocas: true, autocomplete: "location" %>
    </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-5" style="border-color: #ffcc99;">
        <div class="card-header text-center" style="background-color: #ffcc99;">
          <h2>Sign up</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: resource, local: true, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :ユーザーネーム %>
              <%= f.text_field :username, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>

           <div class="form-group">
             <label class="profile-picture-container">
               <% if f.object.profile_picture.attached? %>
                 <%= image_tag f.object.profile_picture, class: 'card-img-top profile-picture' %>
               <% else %>
                 <%= image_tag 'default_profile_picture.png', class: 'card-img-top profile-picture' %>
               <% end %>
               <div class="picture-border"></div>
               <%= f.file_field :profile_picture, accept: 'image/*', class: "form-control d-none", id: "profile-picture-input" %>
             </label>
           </div>


            <div class="form-group">
              <%= f.label :自己紹介 %>
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :お住まい %>
              <%= f.text_area :location, autofocus: true, autocomplete: "location", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード（確認用） %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted text-center" style="background-color: #ffcc99;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
